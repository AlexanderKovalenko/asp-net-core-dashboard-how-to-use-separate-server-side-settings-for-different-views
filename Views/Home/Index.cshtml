
<script type="text/javascript">
    function onItemClick(e) {
        if (e.itemData.text == "Sales Dashboards") {
            window.location = '@Url.Action("SalesDashboards", "Home")'
        }
        else if (e.itemData.text == "Marketing Dashboards") {
            window.location = '@Url.Action("MarketingDashboards", "Home")'
        }
    }
</script>

@(Html.DevExtreme().Menu()
    .ID("Menu")
    .Items(items => {
        items.Add()
            .Text("Sales Dashboards")
            .Icon("images/SalesImage.png");
        items.Add()
            .Text("Marketing Dashboards")
            .Icon("images/MarketingImage.png");
    })
    .OnItemClick("onItemClick")
)